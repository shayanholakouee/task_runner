<h1>Sign Up</h1>
<%= form_with url: edit_password_path do |form| %>
  <% if @user.errors.any? %>
    <div class="alert alert-danger">
      <% @user.errors.full_messages.each do |messages| %>
        <div><%= messages %></div>
      <% end %>
    </div>
  <% end %>
  <div class="mb-3">
    <%= form.password_field :password, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= form.password_field :password_confirmation, class: "form-control" %>
  </div>
  <div class="mb-4">
    <%= form.submit "Edit", class: "btn btn-primary" %>
  </div>
<% end %>